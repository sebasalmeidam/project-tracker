<% if !@clients.blank? %>
	<div class="row">
		
			<div class="panel-group">
			  <div class="panel panel-default">
			    <div class="panel-heading">
			      <h4 class="panel-title">
			        <span>Lista de Clientes</span>
			        <button data-toggle="collapse" href="#collapse1" class="btn btn-success btn-sm">Ver</button>
			      </h4>
			    </div>
			    <div id="collapse1" class="panel-collapse collapse">
			      <ul class="list-group">
				      <% @clients.each do |c| %>
				        <li class="list-group-item"><%= link_to c.name, admin_client_path(c) %></li>
				      <% end %>
			      </ul>
			    </div>
			  </div>
			</div> <!-- panel div--> 
		 <!-- col-6 div--> 
	</div> <!-- row div--> 
<% else %>
