<h1>
	<span><%= t('titles.edit_user') %></span>	
	<span><%= link_to t('buttons.back'), admin_users_path, class: "btn btn-default" %></span>	
</h1>

<div class="row marginTop30">
    <%= form_for [:admin, @user], :html => {class: "form-horizontal"} do |f| %>
  <div class="col-md-8">
    <%= render(:partial => "form", locals: {f: f}) %>
    
    <div class="form-group">
      <div class="col-md-8 col-md-offset-4">
        <%= f.submit t('buttons.edit_user'), :class => 'btn btn-default' %>
      </div>
    </div>
    <% end %>
</div>

<script>
  $(document).ready(function(){
    
    $('#form').show();
    $('.user_type').hide();
  
    if( $("#client_type").is(":checked")) {
        $('#client_name_div').show();
    };

  });
</script>