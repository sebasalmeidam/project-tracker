<div class= "small"	id="flash"> </div>
	

<%= form_for @attachment, url: {controller: "attachments", action: "create", client_id: @task.client_id, task_id: @task.id }, :html => { :multipart => true, id: "form" }, remote: true do |f| %>
	
	<%= f.hidden_field :client_id, value: @task.client_id %>
	<%= f.hidden_field :task_id, value: @task.id %>

	<div class="form-group row">
		<%= f.label :file_name, "DescripciÃ³n:", class: "col-sm-1 col-form-label" %>
